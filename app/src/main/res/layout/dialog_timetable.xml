<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="app.kobuggi.hyuabot.ui.main.shuttle.timetable.ShuttleTimetableDialogViewModel" />
    </data>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/shuttle_route_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shuttle_route"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/hanyang_primary"
            android:padding="20dp"
            android:gravity="center" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shuttle_arrival_time_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>

