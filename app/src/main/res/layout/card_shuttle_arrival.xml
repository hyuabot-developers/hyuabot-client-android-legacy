<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_shuttle_arrival_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardBackground"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:strokeColor="@color/hanyang_primary"
    app:strokeWidth="0dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/hanyang_primary" >
            <TextView
                android:id="@+id/shuttle_stop_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontWeight="900" />
            <View
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/shuttle_stop_location"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical | end"
                android:src="@drawable/ic_map_marker"
                android:background="@android:color/transparent"
                tools:ignore="ContentDescription"
                app:tint="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/shuttle_DH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/shuttle_type_DH"
                android:text="@string/shuttle_type_DH"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/hanyang_secondary"
                android:textSize="16sp"
                android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shuttle_DH_time"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical" />
            <TextView
                android:id="@+id/shuttle_DH_no_data"
                android:text="@string/no_arrival_data"
                android:textColor="@color/primaryTextColor"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="30dp"
                android:orientation="vertical" />
        </LinearLayout>
        <View
            android:id="@+id/shuttle_stop_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7f7f7f"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />
        <LinearLayout
            android:id="@+id/shuttle_DJ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/shuttle_type_DJ"
                android:text="@string/shuttle_type_DJ"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/hanyang_tertiary"
                android:textSize="16sp"
                android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shuttle_DJ_time"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical" />
            <TextView
                android:id="@+id/shuttle_DJ_no_data"
                android:text="@string/no_arrival_data"
                android:textColor="@color/primaryTextColor"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="30dp"
                android:orientation="vertical" />
        </LinearLayout>
        <View
            android:id="@+id/shuttle_stop_divider_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7f7f7f"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />
        <LinearLayout
            android:id="@+id/shuttle_DY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/shuttle_type_DY"
                android:text="@string/shuttle_type_DY"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/hanyang_quaternary"
                android:textSize="16sp"
                android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shuttle_DY_time"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical" />
            <TextView
                android:id="@+id/shuttle_DY_no_data"
                android:text="@string/no_arrival_data"
                android:textColor="@color/primaryTextColor"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="30dp"
                android:orientation="vertical" />
        </LinearLayout>
        <View
            android:id="@+id/shuttle_stop_divider_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7f7f7f"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />
        <LinearLayout
            android:id="@+id/shuttle_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/shuttle_type_C"
                android:text="@string/shuttle_type_C"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp"
                android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shuttle_C_time"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical" />
            <TextView
                android:id="@+id/shuttle_C_no_data"
                android:text="@string/no_arrival_data"
                android:textColor="@color/primaryTextColor"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="30dp"
                android:orientation="vertical" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/expand_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/expand_button_selector"
            android:padding="10dp"
            android:gravity="center"
            app:tint="@color/primaryTextColor" />
    </LinearLayout>
</androidx.cardview.widget.CardView>